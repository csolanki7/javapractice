 */
public class ifelse {
    public static void main ( String [] args ){
        int j=2;
          
        switch (j){
            case 0:
                System.out.println("value is o ");
                break;
             case 1:
                System.out.println("value is 1 ");
                break;
            case 2:
                System.out.println("value is 2 ");
                break;
             case 3:
                System.out.println("value is 3 ");
                break;
                 default:
                System.out.println(" no value ");
                break;
        }
    }
}


